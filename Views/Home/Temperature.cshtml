@model MyFirstWebApp.Controllers.DoctorController
@{
    ViewData["Title"] = "Check Temperature";
}

<h2>@ViewData["Title"]</h2>

<form method="post" asp-controller="Doctor" asp-action="CheckTemperature">
    <div>
        <label for="temperature">Temperature:</label>
        <input type="number" step="0.1" name="temperature" required />
    </div>
    <div>
        <label for="scale">Scale:</label>
        <input type="radio" id="celsius" name="scale" value="Celsius" checked />
        <label for="celsius">Celsius</label>
        <input type="radio" id="fahrenheit" name="scale" value="Fahrenheit" />
        <label for="fahrenheit">Fahrenheit</label>
    </div>
    <div>
        <button type="submit">Check</button>
    </div>
</form>

@if (ViewData["Message"] != null)
{
    <p>@ViewData["Message"]</p>
}
